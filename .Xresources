! hard contrast: *background: #1d2021
URxvt.background: #282828
! soft contrast: *background: #32302f
URxvt.foreground: #ebdbb2
! Black + DarkGrey
URxvt.color0:  #282828
URxvt.color8:  #928374
! DarkRed + Red
URxvt.color1:  #cc241d
URxvt.color9:  #fb4934
! DarkGreen + Green
URxvt.color2:  #98971a
URxvt.color10: #b8bb26
! DarkYellow + Yellow
URxvt.color3:  #d79921
URxvt.color11: #fabd2f
! DarkBlue + Blue
URxvt.color4:  #458588
URxvt.color12: #83a598
! DarkMagenta + Magenta
URxvt.color5:  #b16286
URxvt.color13: #d3869b
! DarkCyan + Cyan
URxvt.color6:  #689d6a
URxvt.color14: #8ec07c
! LightGrey + White
URxvt.color7:  #a89984
URxvt.color15: #ebdbb2

!! font options

URxvt.font: xft:Source Code Pro for Powerline:antialias=true:pixelsize=FONT_SIZE
URxvt.boldFont: xft:Source Code Pro for Powerline:style=bold:antialias=true:pixelsize=FONT_SIZE
URxvt.italicFont: xft:Source Code Pro for Powerline:style=italic:antialias=true:pixelsize=FONT_SIZE
URxvt.boldItalicFont: xft:Source Code Pro for Powerline:style=bolditalic:antialias=true:pixelsize=FONT_SIZE

!! rofi
rofi.columns:                        2
rofi.bw:                             2
rofi.terminal:                       urxvt
rofi.font:                           hermit bold 7
rofi.color-enabled:                  true
!                                       bg      fg    bgalt    hlbg    hlbg
rofi.color-normal:                   #101010,#3a81fa,#131313,#d10047,#101010
rofi.color-urgent:                   #101010,#f00060,#131313,#d10047,#101010
rofi.color-active:                   #101010,#00ff77,#131313,#d10047,#101010
!                                       bg    border
rofi.color-window:                   #101010,#202020